<!--共通部分用-->
<div class="col-md-3">
  <h2>User info</h2>

  <%= image_tag user.get_profile_image(100,100) %>
  <table class="mb-3 btn-block">
    <tbody>
      <tr></tr>
      <tr class="border-top">
        <th class="p-3">name</th>
        <th class="p-3"><%= user.name %></th>
      </tr>
      <tr class="border-top">
        <th class="p-3">introduction</th>
        <th class="p-3"><%= user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <div class="row">
      <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block"  do %>
          <i class="fas fa-user-cog"></i>
      <% end %>
  </div>

  <h2 class="mt-3">New book</h2>
  <% if book.errors.any? %>
    <%= book.errors.count %>errors prohibited this obj from being saved:
    <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form_with model: book_new do |f| %>
    <lable for="book_title">Title</lable>
    <div>
      <%= f.text_field :title %>
    </div>
    <lable for="book_opinion">Opinion</lable>
    <div>
      <%= f.text_area :body %>
    </div>
    <div>
      <%= f.submit 'Create Book', class: "bg-success text-white" %>
    </div>
  <% end %>
</div>