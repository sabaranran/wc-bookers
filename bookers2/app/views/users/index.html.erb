<p class="index-notice"><%= notice %></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'common2', user: @user, book: @book, book_new: @book %>

    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th style="width: 33%">image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <p><%= image_tag user.get_profile_image(80,80) %></p>
              </td>
              <td>
                <p><%= user.name %></p>
              </td>
              <td>
                <%= link_to 'Show', user_path(user.id) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>