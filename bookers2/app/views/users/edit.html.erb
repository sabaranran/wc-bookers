<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>

      <% if @user.errors.any? %>

        <%= @user.errors.count %>errors prohibited this obj from being saved:
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>



      <%= form_with model: @user do |f| %>
        <div class="form-group">
          <label for="inputName">Name</label>
          <div>
            <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前", class: "btn-block"%>
          </div>
        </div>
        <div class="form-group">
          <label for="inputImage">ProfileImage</label>
          <div>
            <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
          </div>
        </div>
        <div class="form-group">
          <label for="inputIntro">Introduction</label>
          <div>
            <%= f.text_area :introduction, id:"inputIntro", class: "btn-block" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.submit "Update User", class: "bg-secondary text-white" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
